#
# Configuration of the server

index index.html;

server {
  # the port your site will be served on
  listen      <%= @listen_port %>;
  # the domain name it will serve for
  server_name <%= @server_name %><% if node['web_server']['nginx']['www'] %> www.<%= @server_name %><% end %>;
  charset     utf-8;

  # root directory
  root <%= @down_path %>;

  # media
  location /media  {
  alias <%= @media_path %>;
  }

  # static
  location /static {
  alias <%= @static_path %>;
  }
}
