#
# Configuration of the server

index index.html;

server {
  # the port your site will be served on
  listen      <%= @listen_port %>;
  # the domain name it will serve for
  server_name <%= @server_name %>;
  charset     utf-8;

  # root directory
  root /var/www/<%= @app_name %>_down;
}
