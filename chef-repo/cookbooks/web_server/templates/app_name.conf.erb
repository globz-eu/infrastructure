# <%= @app_name %>.conf
#
############################################
# File managed by Chef, please do not edit #
############################################
#
# the upstream component nginx needs to connect to
upstream django {
  <%= @server_unix_socket %> # for a file socket
  <%= @server_tcp_socket %> # for a web port socket
}

# configuration of the server
server {
  # the port your site will be served on
  listen      <%= @listen_port %>;
  # the domain name it will serve for
  server_name <%= @server_name %>;
  charset     utf-8;

  # max upload size
  client_max_body_size 75M;   # adjust to taste

  # Django media
  location /media  {
    alias /home/<%= @app_user %>/sites/<%= @app_name %>/media;
  }

  location /static {
    alias /home/<%= @app_user %>/sites/<%= @app_name %>/static;
  }

  # Finally, send all non-media requests to the Django server.
  location / {
    uwsgi_pass  django;
    include     /home/<%= @app_user %>/sites/<%= @app_name %>/source/<%= @app_name %>/uwsgi_params;
  }
}
