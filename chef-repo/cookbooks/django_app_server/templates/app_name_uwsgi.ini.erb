# <%= @app_name %>_uwsgi.ini file
#
############################################
# File managed by Chef, please do not edit #
############################################
#
[uwsgi]
master-fifo = /tmp/fifo0

# Django-related settings
# the base directory (full path)
chdir = /home/<%= @app_user %>/sites/<%= @app_name %>/source/<%= @app_name %>
# Django's wsgi file
module = <%= @app_name %>.wsgi
# the virtualenv (full path)
home = /home/<%= @app_user %>/.envs/<%= @app_name %>

# User-related settings
uid = <%= @app_user %>
gid = <%= @web_user %>

# process-related settings
# master
master = true
# maximum number of worker processes
processes = <%= @processes %>
# the socket (use the full path to be safe
socket = <%= @socket %>
# ... with appropriate permissions - may be needed
<%= @chmod_socket %>
# clear environment on exit
vacuum = true
# background the process & log
daemonize = <%= @log_file %>
# create a pidfile
safe-pidfile = <%= @pid_file %>
